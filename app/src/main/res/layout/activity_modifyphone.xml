<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".ModifyphoneActivity" >

    <include
        android:id="@+id/include1"
        layout="@layout/title_bar_text_back" />

    <EditText
        android:id="@+id/number_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/home_con_icon_dlan_default"
        android:ems="10"
        android:hint="请输入手机号码"
        android:numeric="integer"
        android:paddingLeft="10dp"
        android:paddingRight="16dp"
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp" >

        <com.guojisheng.koyview.MyEditText
            android:id="@+id/verify_edit"
            style="@style/loginEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/home_con_icon_dlan_default"
            android:drawablePadding="8dp"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="8"
            android:paddingLeft="10dp"
            android:paddingRight="88dp" />

        <com.baolinetworktechnology.shejiquan.view.Conde1
            android:id="@+id/gain_butt"
            android:layout_width="74dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_getcode_selector"
            android:text="获取"
            android:textColor="#FF6464"
            android:textSize="12sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/queding"
        android:layout_width="220dp"
        android:layout_height="37dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/anniu_shape"
        android:layout_gravity="center"
        android:text="确定"
        android:textColor="#ffffff" />

    <TextView
        android:text="修改绑定手机号后，原手机号失效，请使用新手机号登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView23" />

</LinearLayout>