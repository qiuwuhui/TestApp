<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rGrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:minHeight="40dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_list"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="资料"
            android:textColor="@color/main_tab_text_color"
            android:textSize="14sp" />

        <View
            android:id="@+id/divid1"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:background="#999999"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_list"
            android:button="@null"
            android:gravity="center"
            android:text="案例"
            android:textColor="@color/main_tab_text_color"
            android:textSize="14sp" />

        <View
            android:id="@+id/divid2"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:background="#999999"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_list"
            android:button="@null"
            android:gravity="center"
            android:text="博文"
            android:textColor="@color/main_tab_text_color"
            android:textSize="14sp" />

        <View
            android:id="@+id/divid3"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:background="#999999" />

        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_list"
            android:button="@null"
            android:gravity="center"
            android:text="rb4"
            android:textColor="@color/main_tab_text_color"
            android:textSize="14sp"
            android:visibility="gone" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/divLinear"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/rGrop"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="3" >

        <FrameLayout
            android:id="@+id/view_div1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_color" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>