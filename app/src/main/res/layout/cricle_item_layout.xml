<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/post_view">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="161dip"
            android:layout_height="wrap_content"
            android:background="@drawable/yuanjiao_layout11"
            android:layout_marginRight="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp">

                <TextView
                    android:layout_width="81dip"
                    android:layout_height="wrap_content"
                    android:id="@+id/zan_item"
                    android:gravity="center|left"
                    android:text="赞"
                    android:drawableLeft="@drawable/cricle_zan_item"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:paddingTop="6dip"
                    android:paddingBottom="6dip"
                    android:paddingLeft="23dip"
                    android:paddingRight="15dip"
                    android:drawablePadding="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#34393B"
                    android:layout_marginTop="3dip"
                    android:layout_marginBottom="3dip"/>

                <LinearLayout
                    android:id="@+id/pin_item"
                    android:orientation="horizontal"
                    android:layout_width="81dip"
                    android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cricle_pin_item"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="1.5dip"
                            android:layout_weight="1"
                            android:id="@+id/imageView13"/>

                        <TextView
                            android:text="评论"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView35"
                            android:gravity="center|left"
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:layout_weight="1"
                            android:textColor="@color/white"/>
                </LinearLayout>

        </LinearLayout>

</RelativeLayout>
