<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    android:paddingLeft="8dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:visibility="visible" xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff" >

        <com.baolinetworktechnology.shejiquan.view.CircleImg
            android:id="@+id/designer_iv_head"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/default_icon"
            app:border_colo="#F5F5F5"
            app:border_widt="3dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/designer_iv_head"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="10"
                android:text="设计师"
                android:textColor="#262626"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/ivHonor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tvName"
                android:layout_alignTop="@id/tvName"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/tvName"
                android:src="@drawable/weishop_admin_honor" />

            <ImageView
                android:id="@+id/ivGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ivHonor"
                android:layout_alignTop="@id/ivHonor"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/ivHonor"
                android:src="@drawable/grade"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvFromCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_marginTop="4dp"
                android:drawablePadding="4dp"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="省-城市"
                android:textColor="#999999"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/il"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvFromCity"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:paddingBottom="4dp" >

                <TextView
                    android:id="@+id/tvNumOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLength="10"
                    android:text="擅长风格：中式、现代、欧式"
                    android:textColor="@color/text_normal6"
                    android:textSize="13sp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tvNumComment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLength="10"
                    android:textColor="@color/text_normal6"
                    android:textSize="13sp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tvNumOPus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLength="10"
                    android:textColor="@color/text_normal6"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCost"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvFromCity"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="费用"
                android:textColor="#FF575F"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="设计师的设计理念，完整展示设计师的设计理念，完整展示设计师的设计理念，完整展示设计师的设计理念，完整展示设计师的设计理念，完整展示设计师的设计理念，完整展示设计师的设计理念，完整展示" />

</LinearLayout>