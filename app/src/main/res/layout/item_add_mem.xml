<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_contact_swipe_root"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="horizontal"
    android:background="@color/white">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/addMemCheckBoxTheme"
        android:id="@+id/add_chBox"
        android:layout_marginLeft="12dp"/>
    <LinearLayout
        android:id="@+id/ll_constact"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp">

            <com.baolinetworktechnology.shejiquan.view.CircleImg
                android:id="@+id/icon"
                android:layout_marginLeft="13dip"
                android:layout_height="28dip"
                android:layout_width="28dip"
                android:layout_gravity="center"
                android:src="@drawable/xiaotu"/>
            <TextView
                android:id="@+id/item_contact_title"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#333333"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textSize="14sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dip"
            android:background="@color/line" />

    </LinearLayout>

</LinearLayout>


