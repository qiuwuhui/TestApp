<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/itemDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divide_height"
            android:background="@color/acyivity_bg" />

        <TextView
            android:id="@+id/tvDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:padding="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="今天"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_size_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/item_list"
        android:padding="8dp" >

        <com.baolinetworktechnology.shejiquan.view.CircleImg
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/designer_iv_head"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_icon"
            ptr:border_colo="#EEE"
            ptr:border_widt="2dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_toRightOf="@id/designer_iv_head"
            android:paddingLeft="8dp"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_title" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="20:15"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_title" />

            <ImageView
                android:id="@+id/ivNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/admin_next" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line" />

</LinearLayout>