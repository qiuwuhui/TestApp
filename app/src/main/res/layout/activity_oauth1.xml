<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OAuth1Activity" >

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_top_height"
        android:background="@color/white"
        />

    <RelativeLayout
        android:id="@+id/aaaa"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/view3">

        <ImageView
            android:id="@+id/back1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_login_finsh"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_below="@+id/aaaa">

        <TextView
            android:text="恭喜您已注册成功"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF9453"
            android:gravity="center"
            android:textSize="17sp"
            android:id="@+id/textView25" />

        <TextView
            android:text="完成最后一步即可正式加入设计圈"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            android:id="@+id/textView26" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="15dp">

            <com.baolinetworktechnology.shejiquan.view.CircleImg
                android:id="@+id/shejiImg"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/icon_morentxy"
                app:border_colo="#ffffff"
                android:gravity="center"
                app:border_widt="3dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/set_bind_weichat_yes"
                android:id="@+id/isCerti"
                android:layout_marginRight="113dp"
                android:layout_marginEnd="113dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                 />
        </RelativeLayout>

        <TextView
            android:text="秋天的雪"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:textColor="#666666"
            android:id="@+id/tvName" />

        <com.guojisheng.koyview.MyEditText
            android:id="@+id/et_phone"
            style="@style/loginEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:background="@drawable/home_con_icon_dlan_default"
            android:paddingLeft="10dp"
            android:hint="请输入手机号"
            android:imeOptions="actionNext"
            android:inputType="number" >

            <requestFocus />
        </com.guojisheng.koyview.MyEditText>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp">

            <com.guojisheng.koyview.MyEditText
                android:id="@+id/etCode"
                style="@style/loginEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/home_con_icon_dlan_default"
                android:drawablePadding="8dp"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="8"
                android:paddingLeft="10dp"
                android:paddingRight="88dp" />

            <com.baolinetworktechnology.shejiquan.view.Conde
                android:id="@+id/btn_getCode"
                android:layout_width="74dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_getcode_selector"
                android:text="获取验证码"
                android:textColor="#FD6530"
                android:textSize="12sp" />

        </RelativeLayout>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"/>

        <TextView
            android:text="手机号仅用于您的身份认证，同时为您提供最优质的服务，设计圈会保护您的信息安全，请放心填写"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/textView18" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/anniu_shape1"
            android:text="登 录"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp">

        <TextView
            android:text="绑定手机号，即表示您已同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/textss"
            android:textColor="#B2B2B2"
            android:gravity="right"
            android:layout_weight="1" />
        <TextView
            android:text="《用户注册协议》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/text"
            android:gravity="left"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>