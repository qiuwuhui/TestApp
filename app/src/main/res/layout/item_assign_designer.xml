<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@drawable/item_list"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="8dp" >

        <com.baolinetworktechnology.shejiquan.view.CircleImg
            android:id="@+id/designer_iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/default_icon"
            ptr:border_colo="#EEE"
            ptr:border_widt="2dp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/designer_iv_head"
            android:ellipsize="end"
            android:maxLength="6"
            android:text="设计师"
            android:textColor="#262626"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivHonor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tvName"
            android:layout_alignTop="@id/tvName"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/tvName"
            android:src="@drawable/weishop_admin_honor"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/ivGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ivHonor"
            android:layout_alignTop="@id/ivHonor"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/ivHonor"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvFromCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/designer_iv_head"
            android:drawableLeft="@drawable/locationx"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:maxLength="12"
            android:singleLine="true"
            android:text="广东省-中山市"
            android:textColor="#787878"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFromCity"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/designer_iv_head"
            android:singleLine="true"
            android:text="设计费用：100-150元/m2"
            android:textColor="#787878"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="80dp"
            android:src="@drawable/my_older_call" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_red_gree_radu"
            android:button="@null"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="选择Ta"
            android:textColor="@color/main_tab_text_color" />
    </RelativeLayout>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="16dp" />

</LinearLayout>