<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <com.baolinetworktechnology.shejiquan.view.CircleImg
                android:id="@+id/userLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/xiaotu"
                 />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp" 
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设计师名字" 
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/name"
                    android:text="8月15号   16:44:12" 
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:text="回复"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:background="@drawable/icon_anniuk"
                    android:id="@+id/huifu"
                    android:layout_marginRight="22dp"
                    android:gravity="center"
                    android:layout_marginEnd="22dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/shape_hint"
                    android:id="@+id/is_zuozhe"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/name"
                    android:layout_toEndOf="@+id/name" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvConten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="13sp"
            android:text="评论的具体内容，完整显示评论的具体内容，评论的具体内容，完整显示评论的具体内容，评论的具体内容，完整显示评论的具体内容，评论的具体内容，完整显示评论的具体内容评论的具体内容，完整显示评论的具体内容完整显示评论的具体内容。" />

        <TextView
            android:id="@+id/myConten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="60dp"
            android:paddingLeft="10dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:textSize="12sp"
            android:textColor="#999999"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="#F8F8F8"
            android:text=""/>

    </LinearLayout>
