<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line">
     <ImageView
        android:id="@+id/logoBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_top_zxheight"
        android:scaleType="centerCrop"
        android:src="@drawable/owner_head_bg" />

    <com.guojisheng.koyview.GScrollView
        android:id="@+id/reboundScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/item_height" >

              <RelativeLayout
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y370"
                android:background="@drawable/owner_head_bg" >

               <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    >
                    <com.baolinetworktechnology.shejiquan.view.CircleImg
                        xmlns:ptr="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/owner_iv_head"
                        android:layout_width="@dimen/my_logo_height"
                        android:layout_height="@dimen/my_logo_height"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rb_bg_oval"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_morentxy"
                        android:visibility="visible"
                        app:border_color="#FFF"
                        app:border_width="2dp" />
                   <TextView
                   android:id="@+id/item_tv_login"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_toRightOf="@+id/owner_iv_head"
                   android:gravity="center"
                   android:paddingBottom="4dp"
                   android:paddingLeft="10dp"
                   android:paddingRight="24dp"
                   android:paddingTop="4dp"
                   android:text="登录/注册"
                   android:textColor="#FFF"
                   android:textSize="16sp"
                   android:visibility="visible" />
                    <!--<TextView-->
                        <!--android:id="@+id/item_tv_login"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_toRightOf="@+id/owner_iv_head"-->
                        <!--android:background="@drawable/select_login_samll_bg"-->
                        <!--android:gravity="center"-->
                        <!--android:paddingBottom="4dp"-->
                        <!--android:paddingLeft="24dp"-->
                        <!--android:paddingRight="24dp"-->
                        <!--android:paddingTop="4dp"-->
                        <!--android:text="立即登录"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:textColor="#FFF"-->
                        <!--android:textSize="@dimen/text_size_small"-->
                        <!--android:visibility="visible" />-->

                </RelativeLayout>

                <TextView
                    android:id="@+id/sf_tv_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="30dp"
                    android:textColor="#F0F0F0"
                    android:textSize="13sp"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/sf_rl_advice"
                style="@style/itemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:drawableLeft="@drawable/con_icon_tsyfk_default"
                android:text="@string/advice_feedback" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <TextView
                android:id="@+id/item_share"
                style="@style/itemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:drawableLeft="@drawable/con_icon_tjgpy_default"
                android:text="推荐给朋友" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/line"
                />

            <TextView
                android:id="@+id/sf_rl_setting"
                style="@style/itemTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:drawableLeft="@drawable/con_icon_sz_default"
                android:text="@string/setting"
                 />

            <View
                android:layout_width="match_parent"
                android:layout_height="264dp"
                android:background="@color/line"
                 />
        </LinearLayout>
    </com.guojisheng.koyview.GScrollView>

</RelativeLayout>
