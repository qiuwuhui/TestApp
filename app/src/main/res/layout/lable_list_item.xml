<?xml version="1.0" encoding="utf-8"?>
<com.baolinetworktechnology.shejiquan.tongxunlu.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/con_item_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:bga_sil_bottomMode="pullOut"
    app:bga_sil_springDistance="20dp"
    app:bga_sil_swipeDirection="left">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/lable_delete"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="#ff3a32"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_constact"
        android:layout_height="70.6dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70.6dp">

        <LinearLayout
            android:id="@+id/lable_conten"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="70dp">

            <TextView
                android:text="明下雨"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lable_name"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/text_normal"/>

            <TextView
                android:text="大家好啊的"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lable_xianqin"
                android:textSize="15sp"
                android:textColor="#888888"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:ellipsize="end"
                android:singleLine="true" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="0.1dp"
            android:background="@color/line" />

    </LinearLayout>

    </LinearLayout>
</com.baolinetworktechnology.shejiquan.tongxunlu.SwipeItemLayout>