<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" >

        <LinearLayout
            android:id="@+id/older_liner_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans_white"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="visible" >

            <ListView
                android:id="@+id/older_list_first"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:choiceMode="singleChoice"
                android:divider="@color/line"
                android:dividerHeight="0.5dp"
                android:listSelector="#FBFBFB"
                android:scrollbars="none" >
            </ListView>

            <include layout="@layout/line_vertical_full" />

            <ListView
                android:id="@+id/older_list_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:choiceMode="singleChoice"
                android:divider="@color/line"
                android:listSelector="#00000000"
                android:background="#EEEEEE"
                android:scrollbars="none" >
            </ListView>
        </LinearLayout>

        <GridView
            android:id="@+id/case_class_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans_white"
            android:horizontalSpacing="16dp"
            android:numColumns="3"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:verticalSpacing="16dp"
            android:visibility="visible" >
        </GridView>
    </RelativeLayout>

    <View
        android:id="@+id/popuBlank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >
    </View>

</LinearLayout>