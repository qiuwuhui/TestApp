<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/acyivity_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="搜索历史"
            android:textColor="@color/text_normal" />

        <TextView
            android:id="@+id/tvClean"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_thetrash"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="清空搜索历史"
            android:textColor="@drawable/selector_btn_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.15dp"
            android:layout_alignParentBottom="true"
            android:background="#7F7F7F" />
    </RelativeLayout>

    <com.baolinetworktechnology.shejiquan.view.TagGroup
        android:id="@+id/tagGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >
    </com.baolinetworktechnology.shejiquan.view.TagGroup>

</LinearLayout>