<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.baolinetworktechnology.shejiquan.activity.PhotoActivity" >

    <com.baolinetworktechnology.shejiquan.view.KoyViewPager
        android:id="@+id/kvp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:id="@+id/relati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="0/0"
            android:layout_marginBottom="5dp"
            android:textColor="#FFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.15"
                android:ellipsize="end"
                android:maxLength="16"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="#FFF"/>

            <ImageView
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:padding="14dp"
                android:src="@drawable/ic_download"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="14dp"
        android:src="@drawable/nav_button_fhan_default"/>

    <ImageView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="14dp"
        android:src="@drawable/nav_button_fxe_default"
        android:visibility="gone"/>
</RelativeLayout>