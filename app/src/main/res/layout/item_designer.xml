<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_list"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp">

        <com.baolinetworktechnology.shejiquan.view.CircleImg
            android:id="@+id/designer_iv_head"
            android:layout_width="66dp"
            android:layout_height="68dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/xiaotu"
            ptr:border_colo="#F5F5F5"
            ptr:border_widt="3dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/designer_iv_head"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/designer_iv_head"
            android:layout_toEndOf="@+id/designer_iv_head"
            android:layout_marginLeft="18dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="10"
                android:text="设计师"
                android:textColor="#262626"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvFromCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_marginTop="3dp"
                android:drawablePadding="4dp"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="省-城市"
                android:textColor="#666666"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/il"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvFromCity"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:paddingBottom="4dp" >

                <TextView
                    android:id="@+id/tvNumOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="擅长风格：中式、现代、欧式"
                    android:layout_marginRight="16dp"
                    android:textColor="#666666"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/il"
                android:gravity="center"
                android:text="费用"
                android:textColor="#FF8E50"
                android:layout_toRightOf="@+id/tvFromCity"
                android:textSize="13sp" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/iv_layout"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#FFF"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:layout_marginTop="10dp">

        <com.baolinetworktechnology.shejiquan.RoundRecImageView
            android:id="@+id/iv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_morentxs" />

        <com.baolinetworktechnology.shejiquan.RoundRecImageView
            android:id="@+id/iv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_morentxs" />

        <RelativeLayout
            android:id="@+id/item_Num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <com.baolinetworktechnology.shejiquan.RoundRecImageView
                android:id="@+id/iv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_morentxs" />
            <com.baolinetworktechnology.shejiquan.RoundRecImageView
                android:id="@+id/iv4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/subscribe_item" />
            <TextView
                android:text="共12套作品"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/NumCase_tv"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="17sp"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>