<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_list"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.baolinetworktechnology.shejiquan.view.CircleImg
            android:id="@+id/circle_image"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/xiaotu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="测试数据"
                    android:layout_marginTop="4dp"
                    android:textColor="#737373"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/zuozhe_imge"
                    android:id="@+id/is_zuozhe"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="8dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="2015-06-17 16:26"
                android:textColor="#BCBCBC"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="6"
        android:text="测试数据"
        android:layout_marginLeft="42dp"
        android:textColor="#333333"
        android:textSize="13sp" />


    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Reply"
            android:background="@color/acyivity_bg"
            android:padding="5dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="10dp"
            android:textColor="#666666"
            android:textSize="12sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="10dp"
        android:background="@color/line" />

</LinearLayout>