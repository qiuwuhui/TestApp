<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rgOlder"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/shape_rect_white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/rb_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:button="@null"
        android:drawableRight="@drawable/selector_up_down"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="6dp"
        android:paddingRight="8dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="城市"
        android:textColor="@drawable/selector_color_general_text"
        android:textSize="@dimen/text_size_title" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="16dp"
        android:background="@color/line" />

    <CheckBox
        android:id="@+id/rb_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:button="@null"
        android:drawableRight="@drawable/selector_up_down"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="类型"
        android:textColor="@drawable/selector_color_general_text"
        android:textSize="@dimen/text_size_title" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="16dp"
        android:background="@color/line" />

    <CheckBox
        android:id="@+id/rb_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:button="@null"
        android:drawableRight="@drawable/selector_up_down"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="预算"
        android:textColor="@drawable/selector_color_general_text"
        android:textSize="@dimen/text_size_title" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="16dp"
        android:background="@color/line" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:button="@drawable/select_check_icon"
        android:gravity="center"
        android:text=" 仅可接单"
        android:textColor="@drawable/selector_color_general_text"
        android:textSize="@dimen/text_size_title" />

</LinearLayout>